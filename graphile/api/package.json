{
    "name": "expedius-graphile-api",
    "version": "0.0.1",
    "description": "Project expedius using the graphile suite - the API source",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "export-gql-schema": "EXPORT_GQL_SCHEMA_ONLY=t yarn run start:local",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
