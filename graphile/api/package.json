        "start:nodemon": "yarn run nodemon",
        "start": "node .build/index.js"
    },
    "dependencies": {
        "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
        "fastify": "^3.15.0",
        "pg": "^8.6.0",
        "postgraphile": "^4.11.0"
    },
    "devDependencies": {
        "nodemon": "^2.0.7"
    }
}
